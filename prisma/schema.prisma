// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id          String   @id @default(uuid())
  slug        String   @unique // For the public URL
  accessCode  String   @unique // 3-char code for login
  
  // Content
  photoBase64 String?  // Storing image directly for simplicity in prototype
  name        String?
  title       String?
  company     String?
  
  // Contact
  whatsapp    String?
  email       String?
  website     String?
  instagram   String?
  linkedin    String?
  
  // Theme
  gradient    String?  @default("linear-gradient(180deg, #ffffff 0%, #a0a0a0 100%)")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
